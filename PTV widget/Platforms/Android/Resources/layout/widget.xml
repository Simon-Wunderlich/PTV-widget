<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/widget"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              >

  <!-- Layout 1x1 -->
  <RelativeLayout
      android:id="@+id/layout_1_1"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:visibility="visible"
      tools:visibility="visible"
      android:background="#fff"
      android:layout_centerVertical="true"
        >

  </RelativeLayout> 
  <RelativeLayout
    android:id="@+id/layout_2_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
      android:id="@+id/colourStrip"
        android:layout_width="match_parent"
        android:layout_height="40px"
        android:background ="#000000"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        tools:visibility="visible"
        android:layout_centerVertical="false"/>
    <ProgressBar
      android:id="@+id/indeterminateBar"
android:visibility="invisible"
      android:layout_width="40px"
      android:layout_height="40px" 
      android:layout_alignParentEnd="true"
      android:layout_marginRight="40px"/>

    <TextView
      android:id="@+id/routeName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="false"
      android:layout_centerVertical="true"
            
      android:layout_toRightOf="@id/icon"
      android:paddingLeft ="10dp"
      
      android:fontFamily="DroidSansMono"
      android:text=""
      android:textSize="32dp"
      android:textFontWeight="500"
      android:textColor="@android:color/black"/>
    <TextView
      android:id="@+id/minsNum"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:paddingLeft="10dp"
      android:text="--"
      android:textSize="20dp"
      android:layout_toLeftOf="@id/minsText"
      android:textFontWeight="800"
      android:background="#000"
      android:textColor="@android:color/white"/>
    <TextView
      android:id="@+id/minsText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_alignParentEnd="true"
      android:paddingRight="10dp"
      android:text=" mins"
      android:textSize="20dp"

      android:background="#000"
      android:textColor="@android:color/white"/>
    <TextView
      android:id="@+id/stopName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:padding="10dp"
      android:fontFamily="DroidSansMono"
      android:text=""
      android:textSize="12dp"
      android:textColor="@android:color/black"/>
    <RelativeLayout
      android:id="@+id/update"
      android:layout_width ="match_parent"
      android:layout_height="match_parent"
      android:layout_centerHorizontal="true"
      android:clickable="true"      />
    <RelativeLayout
      android:id="@+id/prevPlatform"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:clickable="true"/>
    <RelativeLayout
      android:id="@+id/nextPlatform"
      android:layout_width="40dp"
      android:layout_height="match_parent"
      android:layout_alignParentEnd="true"
      android:clickable="true"/>
  </RelativeLayout>
</RelativeLayout>